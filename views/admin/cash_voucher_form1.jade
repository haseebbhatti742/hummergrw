.row.form-group
    .col-md-4
        .form-group.input-group-md
                label Cas Voucher Number
                input#cash_voucher_number.form-control(type = "text", value='1645', disabled='true')
        #cash_voucher_number_error(style="color:red")
    .col-md-4
        .form-group.input-group-md
            label Date
            input#cash_voucher_date.form-control(type = "date")
        #cash_voucher_date_error(style="color:red")
    .col-md-4 
        .form-group.input-group-md
            label Type
            select#cash_voucher_type.form-control
                option(value="Pay") Pay
                option(value="Receive") Receive
        #cash_voucher_type_error(style="color:red")
.row.form-group
    .col-md-4
        .form-group.input-group-md
            label Name
            input#cash_voucher_name.form-control(type = "text", placeholder='Enter Name')
        #cash_voucher_name_error(style="color:red")
    .col-md-4
        .form-group.input-group-md
            label Signature
            input#cash_voucher_signature.form-control(type = "text", placeholder='Enter Signature')
        #cash_voucher_signature_error(style="color:red")
    .col-md-4
        .form-group.input-group-md
            label Amount
            input#cash_voucher_amount.form-control(type = "text", placeholder='Enter Amount')
        #cash_voucher_amount_error(style="color:red")
.row.form-group
    .col-md-12
        label Details
        textarea.form-control(placeholder="Enter Details Here...", rows="5")
.row.form-group 
    .col-md-3 
        button.btn.btn-success Submit