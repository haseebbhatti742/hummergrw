#ledgerReport.col-md-12
                if status == "error"
                    h3 #{errorMessage}
                else
                    .invoice.p-3.mb-3
                        // title row
                        .row
                            .col-12
                                h4
                                    i.fas.fa-globe &nbsp; Hummer Grw
                                    small.float-right Date From: #{dataset.date_from}
                            // /.col
                        // info row
                        .row.invoice-info
                            .col-sm-6.invoice-col 
                                //- | Party Info
                                address
                                    //- strong #{dataset.party_info.party_name}
                                    //- br
                                    //- |                     Phone: #{dataset.party_info.party_contact}
                            .col-sm-6.invoice-col.float-right
                                h4
                                    small.float-right Date To: #{dataset.date_to}
                        .row
                            .col-12.table-responsive
                                table.table.table-striped
                                    thead
                                        tr
                                            th Party
                                            th Date
                                            th GP #
                                            th CV #
                                            th Head
                                            th Description
                                            th Weight
                                            //th Buyer Weight
                                            th Rate
                                            th Taken
                                            th Given
                                            th Balance
                                    tbody
                                        -for(let i=0; i<dataset.length; i++){
                                            tr
                                                td #{dataset[i].party_name}
                                                td #{dataset[i].l_date}
                                                td #{dataset[i].gp_number_manual}
                                                td #{dataset[i].cv_number_manual}
                                                td #{dataset[i].l_commodity}
                                                td #{dataset[i].l_description}
                                                td #{dataset[i].l_seller_weight}
                                                //td #{dataset[i].l_buyer_weight}
                                                td #{dataset[i].l_rate}
                                                td #{dataset[i].l_debit}
                                                td #{dataset[i].l_credit}
                                                td #{dataset[i].l_balance}
                                                
                                        -}
                        .row
                            // accepted payments column
                            .col-6
                            .col-6
                                .table-responsive
                                    table.table
                                        tr
                                            th Total Weight Out
                                            td #{total_weight_in}
                                        tr
                                            th Total Weight In
                                            td #{total_weight_out}
                                        tr
                                            th Total Taken
                                            td #{total_recoveries}
                                        tr
                                            th Total Given
                                            td #{total_expense}
                                        tr
                                            th Balance Amount
                                            td #{balance_amount}
                            // /.col
                        // /.row
                        // this row will not appear when printing
