include header1
include aside
.content-wrapper
    section.content
        .container-fluid
            include sub-header
            .col-md-12
                .card.card-primary.card-outline
                    .card-header
                        h3.card-title Cash Voucher Form
                    .card-body.p-2.mt-2
                        form.card-tools
                            .row.form-group
                                .col-md-4
                                    .form-group.input-group-md
                                            label Cas Voucher Number
                                            input#cash_voucher_number.form-control(type = "text", value="#{cv_number}", disabled='true')
                                    #cash_voucher_number_error(style="color:red")
                                .col-md-4
                                    .form-group.input-group-md
                                        label Amount
                                        input#cash_voucher_amount.form-control(type = "text", placeholder='Enter Amount' required)
                                    #cash_voucher_amount_error(style="color:red")
                                .col-md-4
                                    .form-group.input-group-md
                                        label Date
                                        input#cash_voucher_date.form-control(type = "date" required)
                                    #cash_voucher_date_error(style="color:red")
                                //.col-md-4 
                                    .form-group.input-group-md
                                        label Type
                                        select#cash_voucher_type.form-control
                                            option(value="Pay") Pay
                                            option(value="Receive") Receive
                                    #cash_voucher_type_error(style="color:red")
                            .row.form-group
                                .col-md-4
                                    .form-group.input-group-md
                                        label Name
                                        input#cash_voucher_party_id.form-control(type = "text", placeholder='Enter Name' autocomplete="off" required)
                                        input#cv_party_id.form-control(type="hidden")
                                    #cash_voucher_name_error(style="color:red")
                                .col-md-4
                                    .form-group.input-group-md
                                        label Signature
                                        input#cash_voucher_signature.form-control(type = "text", placeholder='Enter Signature' required)
                                    #cash_voucher_signature_error(style="color:red")
                            .row.form-group
                                .col-md-12
                                    label Details
                                    textarea#cash_voucher_details.form-control(placeholder="Enter Details Here...", rows="5" required)
                            .row.form-group 
                                .col-md-3 
                                    button#btn2.btn.btn-success(type="submit") Submit

include footer
script(src='/js/advance_cash_voucher.js')