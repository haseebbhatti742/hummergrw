#ledgerReport.col-md-12
                if status == "error"
                    h3 #{errorMessage}
                else
                    .invoice.p-3.mb-3
                        // title row
                        .row
                            .col-12
                                h4
                                    i.fas.fa-globe &nbsp; Hummer Grw
                                    small.float-right Date From: #{date_from}
